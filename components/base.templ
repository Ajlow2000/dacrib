package components

templ baseDoc(docTitle string) {
    <html lang="en">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{docTitle}</title>
        <script src="https://unpkg.com/htmx.org@2.0.0-beta1/dist/htmx.min.js"></script>
    </head>

    @Header()

    <body>
        { children... }
    </body>

    @Footer()

    </html>
}
